@inject Services.InstanceAttributeStateContainer stateContainer
@inject Services.ReinforcementLearningServices.NerualNetworkOptions NeuralNetworkOptions


<SideBarMenuGroupSubPageLayout Title="@PageTitle">

    <div class="sub-page-main-content ">
        <SubHeadingUnderlined SubHeadingText="Weight Initialization" />

        <DropDownMenuKeyValuePairs LabelText="Hidden Layer" BindValue="@stateContainer.HiddenLayerWeightInit" ValueChangedCallBack=@(value => stateContainer.HiddenLayerWeightInit = value) DropDownOptions=@NeuralNetworkOptions.HiddenLayerWeightInit_KVP/>
        <DropDownMenuKeyValuePairs LabelText="Output Layer" BindValue="@stateContainer.OutputLayerWeightInit" ValueChangedCallBack=@(value => stateContainer.OutputLayerWeightInit = value) DropDownOptions=@NeuralNetworkOptions.OutputLayerWeightInit_KVP />


        <SubHeadingUnderlined SubHeadingText="Activation Functions" />

        <DropDownMenuKeyValuePairs LabelText="Hidden Layer" BindValue=@stateContainer.HiddenLayerActivationFunction ValueChangedCallBack=@(value => @stateContainer.HiddenLayerActivationFunction = value) DropDownOptions=@NeuralNetworkOptions.HiddenLayerActivationFunction_KVP />
        <DropDownMenuKeyValuePairs LabelText="Output Layer" BindValue=@stateContainer.OutputLayerActivationFunction ValueChangedCallBack=@(value => @stateContainer.OutputLayerActivationFunction = value) DropDownOptions=@NeuralNetworkOptions.OutputLayerActivationFunction_KVP />

        
    </div>

</SideBarMenuGroupSubPageLayout>